{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python ../skills/bandicoot-analysis/scripts/check-environment.py",
            "description": "Verify Bandicoot environment is properly configured at session start"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "python ./validate-input-data.py",
            "description": "Pre-validate data format before loading CSV files"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python ./validate-output.py",
            "description": "Validate generated CSV output files after writing"
          }
        ]
      }
    ]
  }
}
