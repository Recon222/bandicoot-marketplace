{
  "hooks": {
    "validate-bandicoot-environment": {
      "event": "pre-command",
      "pattern": "bandicoot:*",
      "command": "python",
      "args": ["../skills/bandicoot-analysis/scripts/check-environment.py"],
      "description": "Verify Bandicoot environment before running commands"
    },
    "validate-csv-output": {
      "event": "post-command",
      "pattern": "bandicoot:analyze*",
      "command": "python",
      "args": ["./validate-output.py"],
      "description": "Validate generated CSV output files"
    },
    "validate-data-format": {
      "event": "pre-command",
      "pattern": "bandicoot:load",
      "command": "python",
      "args": ["./validate-input-data.py"],
      "description": "Pre-validate data format before loading"
    }
  }
}
